<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.projekt.spiderPSI.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_btn"
        android:text="Capture image"
        android:layout_below="@+id/instruction">
    </Button>

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jezyk - ANG, czarny ekran jest ok"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Your city will appear here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/cityView"
        android:layout_below="@+id/LoadCities"
        android:layout_alignRight="@+id/action_btn"
        android:layout_alignEnd="@+id/action_btn"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <Button
        android:text="SELECT IMAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_btn"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignBaseline="@+id/instruction"
        android:layout_alignBottom="@+id/instruction"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgView"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoadCities"
        android:layout_toRightOf="@+id/instruction"
        android:layout_toEndOf="@+id/instruction"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <Button
        android:text="LOAD CITIES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoadCities"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <TextView
        android:text="Your recognised code will appear here:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="14sp"
        android:layout_below="@+id/action_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/action_btn"
        android:layout_alignEnd="@+id/action_btn" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OCR result will be here"
        android:layout_above="@+id/cityView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
