<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.projekt.spiderPSI.MainActivity">

    <Button
        android:text="SELECT IMAGE"
        android:layout_width="wrap_content"
        android:id="@+id/select_btn"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textResult"
        android:layout_alignLeft="@+id/LoadCities"
        android:layout_alignStart="@+id/LoadCities" />

    <TextView
        android:text="Your city will appear here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityView"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp" />

    <TextView
        android:text="Your recognised code will appear here:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="14sp"
        android:layout_above="@+id/cityView"
        android:layout_alignLeft="@+id/cityView"
        android:layout_alignStart="@+id/cityView"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="OCR schema:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textResult"
        android:layout_alignStart="@+id/textResult"
        android:id="@+id/textViewOCR" />

    <Button
        android:text="LOAD CITIES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoadCities"
        android:textAlignment="center"
        android:layout_above="@+id/select_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_below="@+id/textView16" />

    <TextView
        android:text="Made by Lukasz Pajak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/action_btn"
        android:layout_alignEnd="@+id/action_btn"
        android:id="@+id/textView17" />

    <TextView
        android:text="1. Load city codes database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/textViewOCR"
        android:layout_alignLeft="@+id/textViewOCR"
        android:layout_alignStart="@+id/textViewOCR" />

    <TextView
        android:text="2. Select input type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:text="3. Read output and enjoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OCR result will be here"
        android:layout_above="@+id/cityView"
        android:layout_alignLeft="@+id/cityView"
        android:layout_alignStart="@+id/cityView"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_btn"
        android:text="Capture image"
        android:layout_below="@+id/select_btn"
        android:layout_alignLeft="@+id/select_btn"
        android:layout_alignStart="@+id/select_btn">
    </Button>

</RelativeLayout>
